<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Fiche Voiture{% endblock %}</title>
    {% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('dist/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">


        <!-- Custom styles for this template -->
    <link href="{{ asset('dist/css/modern-business.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
{% block body %}
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">SelectCar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="../homePage">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../aboutUsPage">Présentations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../productPage/contact.html">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<div class="row">
    <div id="carouselExampleIndicators" class="carousel slide slideperso col-lg-5" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!-- Slide One - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('{{ asset('dist/img/mercedes1.jpeg') }}')"></div>
            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item active" style="background-image: url('{{ asset('dist/img/mercedes2.jpeg') }}')"></div>
            <!-- Slide Three - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('{{ asset('dist/img/mercedesinterieur.jpeg') }}')"></div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
        <div class="infovoiture col-lg-5">
            <h1>Mercedes classe S</h1>
            <div class="row infovoiture2">
                <ul class="col-lg-3 item_station"><h4><i class="fas fa-charging-station"></i> {{ Carburant }}</h4></ul>
                <ul class="col-lg-3 item_calendar"><h4><i class="fas fa-calendar-week"></i> {{ Date_Mec|date('d-m-Y') }}</h4></ul>
                <ul class="col-lg-3 item_road"><h4><i class="fas fa-road"></i> {{ Kilometrage }} km</h4></ul>
                <ul class="col-lg-3 item_contract"><h4><i class="fas fa-file-contract"></i>
                       {% if Garantie == 0 %}
                        Sans garantie
                        {% else %}
                        {{ Garantie }} ans
                        {% endif %}
                    </h4></ul>
            </div>
            <br>
            <div class="equipements">
                <h3><i class="fas fa-cog"></i> Equipements</h3>
                <hr>
                <table class="container" id="car_table">
                    <tr>
                        <td><li>Climatisation régulée</li></td>
                        <td><li>Régulateur de vitesse</li></td>
                        <td><li>Régulateur de vitesse</li></td>
                    </tr>
                    <tr>
                        <td><li>Verrouillage centralisé</li></td>
                        <td><li>Verrouillage centralisé</li></td>
                        <td><li>Verrouillage centralisé</li></td>
                    </tr>
                    <tr>
                        <td><li>Direction assistée</li></td>
                        <td><li>Direction assistée</li></td>
                        <td><li>Direction assistée</li></td>
                    </tr>
                    <tr>
                        <td><li>8 airbags</li></td>
                        <td><li>8 airbags</li></td>
                        <td><li>8 airbags</li></td>
                    </tr>
                </table>
            </div>
            <br>
            <div class="infotech">
                <h3><i class="fas fa-info"></i> Carte grise & Informations techniques</h3>
                <hr>
                <table class="container" id="car_table">
                    <tr class="row">
                        <td class="col-lg-3"><li>TVA</li></td>
                        <td class="col-lg-3">NON</td>
                        <td class="col-lg-3"><li>TVA</li></td>
                        <td class="col-lg-3">NON</td>
                    </tr>
                    <tr class="row">
                        <td class="col-lg-3"><li>Genre</li></td>
                        <td class="col-lg-3">VP</td>
                        <td class="col-lg-3"><li>Genre</li></td>
                        <td class="col-lg-3">VP</td>
                    </tr>
                    <tr class="row">
                        <td class="col-lg-3"><li>Energie</li></td>
                        <td class="col-lg-3">GO</td>
                        <td class="col-lg-3"><li>Energie</li></td>
                        <td class="col-lg-3">GO</td>
                    </tr>
                    <tr class="row">
                        <td class="col-lg-3"><li>Puissance</li></td>
                        <td class="col-lg-3">5CV</td>
                        <td class="col-lg-3"><li>Puissance</li></td>
                        <td class="col-lg-3">5CV</td>
                    </tr>

                </table>
            </div>
    </div>
</div>
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">----------- Mentions légales -----------</p>
        </div>
        <!-- /.container -->
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="./dist/vendor/jquery/jquery.min.js"></script>
    <script src="./dist/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>
